dotnet_naming_rule.constants_should_be_pascalcase.style = pascalcase

dotnet_naming_rule.fields__parameters__locals_should_be_camelcase.severity = warning
dotnet_naming_rule.fields__parameters__locals_should_be_camelcase.symbols = fields__parameters__locals
dotnet_naming_rule.fields__parameters__locals_should_be_camelcase.style = camelcase

